<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppCEP.MainPage">

	<ScrollView>
		<VerticalStackLayout
            Spacing="30"
            Padding="30"
            BackgroundColor="#FFBF00"        
            >

			<Image x:Name="LOGO" Source="correios_logo_png.png"  VerticalOptions="Start"/>

			<Entry x:Name="CEP" Placeholder="Digite o CEP somente números." PlaceholderColor="#FFBF00" BackgroundColor="White"/>

			<Button x:Name="BOTAO" Text="Buscar CEP" TextColor="White" BackgroundColor="#00416B"/>

			<Frame BorderColor="Black" Padding="3" HorizontalOptions="Center"  HasShadow="True" CornerRadius="5">
				<Label
                    x:Name="RESULTADO"
                    Text=""              
                 />
			</Frame>

			<Button x:Name="BOTAO2" Text="Limpar" TextColor="White" BackgroundColor="#00416B"/>

		</VerticalStackLayout>
	</ScrollView>


</ContentPage>
